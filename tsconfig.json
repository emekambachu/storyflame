{
    "compilerOptions": {
        "rootDir": ".",
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "preserve",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker"
        ],
        "paths": {
            "@/*": [
                "./resources/*"
            ]
        },
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.js",
        "resources/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
